<MotionBlurDemo:ZoomWindow x:Class="MotionBlurDemo.SmallCatWindow"
                           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                           xmlns:MotionBlurDemo="clr-namespace:MotionBlurDemo"
                           MouseDown="OnMouseDown"
                           SizeToContent="WidthAndHeight">
    <Grid>
        <Border Margin="31" CornerRadius="5" Background="#ffffffff">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="0" BlurRadius="30" Direction="0"/>
            </Border.Effect>
        </Border>
        <Grid Margin="30">
            <Image Grid.Row="1" Source="cat.jpg" Stretch="None" HorizontalAlignment="Center" />
        </Grid>
    </Grid>
</MotionBlurDemo:ZoomWindow>
